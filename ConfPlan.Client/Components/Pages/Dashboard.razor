@page "/dashboard"

<h3>Dashboard</h3>

<button @onclick="HandleLogout">Se déconnecter</button>


<p>Connecté en tant que : @_userState.CurrentUser.Email (@_userState.CurrentUser.Role?.RoleName)</p>


@if (_userState.CurrentUser?.Role?.RoleName == "Admin")
{
    <button @onclick="GoToAdmin">
        Espace Administrateur
    </button>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<hr/>

<h4>Conférences existantes</h4>

<h5>Filtres</h5>
<div class="filters">
    <label>Salle :</label>
    <select @bind="selectedRoom">
        <option value="">Toutes</option>
        @foreach (var room in roomNames)
        {
            <option>@room</option>
        }
    </select>

    <label>Jour :</label>
    <select @bind="selectedDay">
        <option value="">Tous</option>
        @foreach (var day in availableDays)
        {
            <option>@day</option>
        }
    </select>

    <label>Conférencier :</label>
    <select @bind="selectedSpeaker">
        <option value="">Tous</option>
        @foreach (var speaker in speakerNames)
        {
            <option>@speaker</option>
        }
    </select>

    <button @onclick="ResetFilters">Réinitialiser</button>
</div>



<table class="table-conferences">
    <thead>
    <tr>
        <th>Jour</th>
        <th>Horaire</th>
        <th>Salle</th>
        <th>Remplissage</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Conférencier</th>
        <th>Photo</th>
        <th>Biographie</th>
        <th>Inscription</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var conf in filteredConferences)
    {
        <tr>
            <td>@conf.Day</td>
            <td>@conf.TimeSlot</td>
            <td>@conf.Room.Name</td>
            <td>@conf.Room.CurrentCapacity / @conf.Room.MaxCapacity</td>
            <td>@conf.Title</td>
            <td>@conf.Description</td>
            <td>@conf.Speaker.Name</td>
            <td>
                <img src="@conf.Speaker.PhotoUrl" alt="Photo" />
            </td>
            <td>@conf.Speaker.Bio</td>
            <td>
                <button @onclick="() => Subscription(conf)">✏️</button>
            </td>
        </tr>
    }
    </tbody>
</table>

<br/>
<hr/>
<br/>

<h4>Vos Conférences</h4>

<table class="table-conferences">
    <thead>
    <tr>
        <th>Jour</th>
        <th>Horaire</th>
        <th>Salle</th>
        <th>Titre</th>
        <th>Se désinscrire ?</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var conf in filteredConferences)
    {
        <tr>
            <td>@conf.Day</td>
            <td>@conf.TimeSlot</td>
            <td>@conf.Room.Name</td>
            <td>@conf.Title</td>
            <td>
                @* <button @onclick="() => Unsubscription(conf)">✏️</button> *@
            </td>
        </tr>
    }
    </tbody>
</table>

<style>
    .table-conferences {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        font-family: Arial, sans-serif;
    }

    .table-conferences th, .table-conferences td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    .table-conferences th {
        background-color: #f2f2f2;
        font-weight: bold;
        color: #333;
    }

    .table-conferences tr:nth-child(even) {
        background-color: #fafafa;
    }

    .table-conferences tr:hover {
        background-color: #f1f1f1;
    }

    .table-conferences td img {
        max-height: 50px;
        border-radius: 4px;
    }

    .table-conferences td button {
        margin-right: 6px;
        padding: 6px 10px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
    }

    .table-conferences td button:last-child {
        background-color: #dc3545;
    }

    .table-conferences td button:hover {
        opacity: 0.85;
    }
</style>
